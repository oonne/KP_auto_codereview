{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules/"
  ],
  "include": [
    "src/**/*.ts",
    "src/*.ts"
  ]
}
